{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "es5",
      "module": "es6",
      "jsx": "react",
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "plugins": [{ "name": "typescript-plugin-css-modules" }],
      "baseUrl": "src",
      "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"]
    },
    }
  }